<span class="header">
  <span class="title">
    <b><%= link_to room.title, group_group_room_path(room.group, room) %></b>
  </span>

  <% if room.is_open? %>
    <span class="badge badge-primary">open</span>
  <% else %>
    <span class="badge badge-dark">closed</span>
  <% end %>

</span>

<br>

<span class="body">
  <span class="outline"><%= room.outline %></span>
</span>
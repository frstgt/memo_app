<span class="footer">
  <span class="timestamp text-muted">
    <%= timestamp(note) %>
  </span>

  <span class="command">
    <% if index_command and note.user == current_user %>
      <%= link_to "[home]", home_user_note_path(note) %>
    <% end %>    
    <% if home_command %>
      <% if note.is_open? %>
        <%= link_to "[to_close]", to_close_user_note_path(note) %>
      <% else %>
        <%= link_to "[to_open]", to_open_user_note_path(note) %>
      <% end %>

      <%= link_to "[edit]", edit_user_note_path(note) %>
      <%= link_to "[delete]", user_note_path(note), method: :delete,
                              data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</span>
<% provide(:title, @note.title) %>
<div class="row">

  <aside class="col-md-4">

    <section class="info">
      (user note)<br>
      <span class="title"><b><%= @note.title %></b></span><br>
      <span class="author"><i>by <%= @note.pen_name.name %></i></span>
      <span class="description"><%= @note.description %></span>
      <span class="timestamp">
        created <%= time_ago_in_words(@note.created_at) %> ago.<br>
        updated <%= time_ago_in_words(@note.updated_at) %> ago.
      </span>
    </section>
    
  </aside>

  <div class="col-md-8">

    <span class="main_header">
      <span class="count">
        memos (<%= @all_memos.count %>)
      </span>
      <span class="command">
        <%= link_to "[new]", new_user_note_user_memo_path(@note) %>
      </span>
    </span>
    <% if @all_memos.any? %>
      <ol class="main_list">
        <%= render @page_memos %>
      </ol>
      <%= will_paginate @page_memos %>
    <% end %>

  </div>

</div>
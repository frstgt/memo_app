<% provide(:title, @note.title) %>

<div class="row">

  <aside class="col-md-4">

    <section class="info">
      (user note)<br>

      <span class="header">
        <span class="title"><b><%= @note.title %></b></span><br>
        <% if @note.pen_name %>
          <span class="author"><i>by <%= @note.pen_name.name %></i></span>
        <% end %>

        <% if @note.is_open? %>
          <span class="badge badge-primary">open</span>
        <% else %>
          <span class="badge badge-dark">closed</span>
        <% end %>
      </span>

      <span class="body">
        <span class="description"><%= @note.description %></span>
      </span>

      <%= icon_for(@note, { name: @note.title, size: 256 }) %>

      <span class="footer">
        <span class="timestamp">
          created <%= time_ago_in_words(@note.created_at) %> ago.<br>
          updated <%= time_ago_in_words(@note.updated_at) %> ago.
        </span>

        <span class="command">
          <%= link_to "[edit]", edit_user_note_path(@note) %>
          <%= link_to "[delete]", user_note_path(@note), method: :delete,
                                  data: { confirm: "You sure?" } %>
        </span>
      </span>

    </section>

    <hr>

    <span class="side_header small">
      <span class="count">
        user_pictures (<%= @pictures.count %>)
      </span>
      <span class="command">
        <%= link_to "[new]", new_user_note_user_picture_path(@note) %>
      </span>
    </span>
    <% if @pictures.any? %>
      <ol class="picture_list small">
        <%= render @pictures %>
      </ol>
    <% end %>
    
  </aside>

  <div class="col-md-8">

    <span class="main_header">
      <span class="count">
        user_memos (<%= @all_memos.count %>)
      </span>
      <span class="command">
        <%= link_to "[new]", new_user_note_user_memo_path(@note) %>
      </span>
    </span>
    <% if @all_memos.any? %>
      <ol class="memo_list">
        <%= render @page_memos %>
      </ol>
      <%= will_paginate @page_memos %>
    <% end %>

  </div>

</div>
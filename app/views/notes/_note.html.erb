<li id="note-<%= note.id %>">
  <span class="title"><b><%= link_to note.title, note %></b></span>
  <% if note.pen_name %>
    <span class="author"><i>by <%= note.pen_name.name %></i></span>
  <% end %>
  <span class="description"><%= note.description %></span>

  <span class="footer">
    <span class="timestamp">
      updated <%= time_ago_in_words(note.updated_at) %> ago.
    </span>
    <span class="edit_command">
      <%= link_to "[edit]", edit_note_path(note) %>
      <%= link_to "[delete]", note, method: :delete,
                                     data: { confirm: "You sure?" } %>
    </span>
  </span>
</li>

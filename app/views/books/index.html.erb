<% provide(:title, "Books") %>
<div class="row">

  <aside class="col-md-4">

    <span class="side_header">
      <span class="count">
        pickups (<%= @sample_books.count %>)
      </span>
      <span class="command">
      </span>
    </span>
    <% if @sample_books.any? %>
      <ol class="side_list">
        <%= render @sample_books %>
      </ol>
    <% end %>

  </aside>

  <div class="col-md-8">

    <span class="main_header">
      <span class="count">
        books (<%= @all_books.count %>)
      </span>
      <span class="command">
      </span>
    </span>
    <% if @all_books.any? %>
      <ol class="note_list">
        <%= render @page_books %>
      </ol>
      <%= will_paginate @page_books %>
    <% end %>

  </div>

</div>
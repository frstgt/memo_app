<% provide(:title, @note.title) %>

<div class="row">

  <aside class="col-md-4">

    <section class="info">
      (group_note)<br>

      <%= render 'group_notes/info_header_body', note: @note %>

      <%= icon_for(@note, { name: @note.title, size: 256 }) %>

      <%= render 'group_notes/info_footer',
                  note: @note, index_command: false, home_command: false %>
  
    </section>
    
  </aside>

  <div class="col-md-8">

    <span class="main_header">
      <span class="count">
        group_memos (<%= @all_memos.count %>)
      </span>
    </span>
    <% if @all_memos.any? %>
      <ol class="memo_list">
        <%= render @page_memos, home_command: false %>
      </ol>
      <%= will_paginate @page_memos %>
    <% end %>

  </div>

</div>
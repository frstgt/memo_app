<li id="group_note-<%= group_note.id %>">
  <span class="title"><b><%= link_to group_note.title, group_gnote_path(@group, group_note) %></b></span>
  <% if group_note.pen_name %>
    <span class="author"><i>by <%= group_note.pen_name.name %></i></span>
  <% end %>
  <span class="group"><i>@ <%= group_note.group.name %></i></span>
  <span class="description"><%= group_note.description %></span>

  <span class="footer">
    <span class="timestamp">
      updated <%= time_ago_in_words(group_note.updated_at) %> ago.
    </span>
    <span class="command">
      <%= link_to "[edit]", edit_group_gnote_path(@group, group_note) %>
      <%= link_to "[delete]", group_gnote_path(@group, group_note), method: :delete,
                                     data: { confirm: "You sure?" } %>
      <%= link_to "[to_book]", to_book_group_gnote_path(@group, group_note),
                                data: { confirm: "You sure?" } %>
    </span>
  </span>
</li>

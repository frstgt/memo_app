<li id="user_memo-<%= user_memo.id %>">

  <span class="header">
    <% if user_memo.title %>
      <span class="title"><b><%= user_memo.title %></b></span>
    <% end %>
  </span>

  <span class="body">
    <span class="content"><%= sanitize markdown(user_memo.content) %></span>
  </span>

  <span class="footer">
    <span class="timestamp text-muted">
      updated <%= time_ago_in_words(user_memo.updated_at) %> ago.
    </span>

    <span class="number text-muted">
      (<%= user_memo.number %>)
    </span>

    <span class="command">
      <%= link_to "[edit]", edit_user_note_user_memo_path(@note, user_memo) %>
      <%= link_to "[delete]", user_note_user_memo_path(@note, user_memo),
                              method: :delete, data: { confirm: "You sure?" } %>
    </span>
  </span>

</li>
<% provide(:title, @pen_name.name) %>
<div class="row">

  <aside class="col-md-4">

    <%= render "pen_name_info" %>

    <hr>

    <span class="header">
      <span class="count">
        groups (<%= @pen_name.groups.count %>)
      </span>
      <span class="new_command">
        <%= link_to "[new]", "#" %>
      </span>
    </span>

    <% if @pen_name.groups.any? %>
      <ol class="groups">
        <%= render @groups %>
      </ol>
    <% end %>

  </aside>

  <div class="col-md-8">

    <span class="header">
      <span class="count">
        notes (<%= @pen_name.notes.count %>)
      </span>
      <span class="new_command">
        <%= link_to "[new]", new_note_path %>
      </span>
    </span>

    <% if @pen_name.notes.any? %>
      <ol class="notes">
        <%= render @notes %>
      </ol>
      <%= will_paginate @notes %>
    <% end %>
  </div>

</div>
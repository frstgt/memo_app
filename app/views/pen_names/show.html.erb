<% provide(:title, @pen_name.name + " Home") %>
<div class="row">

  <aside class="col-md-4">

    <section class="info">
      (user_notes)<br>

      <%= render 'pen_names/info_header_body', pen_name: @pen_name %>

      <%= icon_for(@pen_name, { name: @pen_name.name, size: 256 }) %>

      <%= render 'pen_names/info_footer', pen_name: @pen_name, kind: "show" %>
    </section>

    <hr>

    <span class="side_header">
      <span class="count">
        groups (<%= @groups.count %>)
      </span>
      <span class="command">
      </span>
    </span>
    <% if @groups.any? %>
      <ol class="side_list">
        <%= render @groups %>
      </ol>
    <% end %>

  </aside>

  <div class="col-md-8">

    <span class="main_header">
      <span class="count">
        user_notes (<%= @all_notes.count %>)
      </span>
      <span class="command">
        <% if @pen_name.user == current_user %>
          <%= link_to "[new]", new_user_note_path %>
        <% end %>
      </span>
    </span>
    <% if @all_notes.any? %>
      <ol class="note_list">
        <%= render @page_notes %>
      </ol>
      <%= will_paginate @page_notes, renderer: will_pagenate_renderer %>
    <% end %>

  </div>

</div>
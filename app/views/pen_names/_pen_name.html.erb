<li id="pen_name-<%= pen_name.id %>">
  <%= pen_name_icon_for(pen_name, {size: 40}) %>
  <span class="name"><i><%= link_to pen_name.name, pen_name %></i></span>
  <span class="description"><%= pen_name.description %></span>

  <span class="footer">
    <span class="timestamp">
      updated <%= time_ago_in_words(pen_name.updated_at) %> ago.
    </span>
    <span class="edit_command">
      <%= link_to "[edit]", edit_pen_name_path(pen_name) %>
      <%= link_to "[delete]", pen_name, method: :delete,
                                     data: { confirm: "You sure?" } %>
    </span>
  </span>
</li>

<li id="group_memo-<%= group_memo.id %>">

  <span class="header">
    <% if group_memo.title %>
      <span class="title"><b><%= group_memo.title %></b></span>
    <% end %>
  </span>

  <span class="body">
    <span class="content"><%= sanitize markdown(group_memo.content) %></span>
  </span>

  <span class="footer">
    <span class="timestamp text-muted">
      <%= timestamp(group_memo) %>
    </span>

    <span class="number text-muted">
      (<%= group_memo.number %>)
    </span>

    <span class="command">
      <% if home_command %>
        <%= link_to "[edit]", edit_group_group_note_group_memo_path(@group, @note, group_memo) %>
        <%= link_to "[delete]", group_group_note_group_memo_path(@group, @note, group_memo),
                                method: :delete, data: { confirm: "You sure?" } %>
      <% end %>
    </span>
  </span>

</li>
<% provide(:title, @user.name) %>
<div class="row">

  <aside class="col-md-4">

    <section class="user_info">
      <span class="name">(u) <i><%= @user.name %></i></span>
      <span class="timestamp">
        created <%= time_ago_in_words(@user.created_at) %> ago.<br>
        updated <%= time_ago_in_words(@user.updated_at) %> ago.
      </span>
    </section>

    <hr>

    <span class="header">
      <span class="count">
        pen names (<%= @user.pen_names.count %>)
      </span>
      <span class="new_command">
        <%= link_to "[new]", new_pen_name_path %>
      </span>
    </span>

    <% if @user.pen_names.any? %>
      <ol class="pen_names">
        <%= render @pen_names %>
      </ol>
      <%= will_paginate @pen_names %>
    <% end %>

  </aside>

  <div class="col-md-8">

    <span class="header">
      <span class="count">
        notes (<%= @user.notes.count %>)
      </span>
      <span class="new_command">
        <%= link_to "[new]", new_note_path %>
      </span>
    </span>

    <% if @user.notes.any? %>
      <ol class="notes">
        <%= render @notes %>
      </ol>
      <%= will_paginate @notes %>
    <% end %>
  </div>

</div>
<% provide(:title, @user.name + "Home") %>
<div class="row">

  <aside class="col-md-4">

    <section class="info">
      (user home)<br>

      <span class="name"><b><%= @user.name %></b></span>

      <span class="timestamp">
        <%= timestamp(@user) %>
      </span>

      <span class="command">
        <%= link_to "[edit]", edit_user_path(current_user) %>
        <%= link_to "[delete]", user_path(current_user),
                                  method: :delete, data: { confirm: "You sure?" } %>
      </span>

    </section>

    <hr>

    <span class="main_header">
      <span class="count">
        rooms (<%= @all_rooms.count %>)
      </span>
      <span class="command">
        <%= link_to "[new]", new_user_room_path %>
      </span>
    </span>
    <% if @all_rooms.any? %>
      <ol class="note_list">
        <%= render @page_rooms %>
      </ol>
      <%= will_paginate @page_rooms, renderer: will_pagenate_renderer %>
    <% end %>

  </aside>

  <div class="col-md-8">

    <span class="main_header">
      <span class="count">
        user_notes (<%= @all_notes.count %>)
      </span>
      <span class="command">
        <%= link_to "[new]", new_user_note_path %>
      </span>
    </span>
    <% if @all_notes.any? %>
      <ol class="note_list">
        <%= render @page_notes %>
      </ol>
      <%= will_paginate @page_notes, renderer: will_pagenate_renderer %>
    <% end %>

  </div>

</div>
<%= render 'shared/error_messages', object: f.object %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :pen_name %>
  <%= f.select :pen_name_id,
               @pen_names.collect { |pen_name| [pen_name.name, pen_name.id] },
               { include_blank: "" }, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :outline %>
  <%= f.text_area :outline, rows: '10', class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :picture %><br>
  <% if @room.picture? %>
    <%= image_tag @room.picture.url(:thumb) %>
  <% end %>
  <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
</div>

<div class="form-group">
  <%= f.label :status %><br>
  <%= f.radio_button :status, Room::ST_OPEN %>
  <%= f.label :open %>
  <%= f.label "(other users can post messages)" %><br>
  <%= f.radio_button :status, Room::ST_CLOSE %>
  <%= f.label :close %>
  <%= f.label "(other users cannot post messages)" %>
</div>

<div class="form-group text-right">
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
</div>
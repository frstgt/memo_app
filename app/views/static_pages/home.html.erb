<div class="row">

  <aside class="col-md-4">

<div class="center jumbotron">
  <h1>Welcome to the <%= app_name %></h1>

  <% if Site.first %>
    <p><%= Site.first.outline %></p>

    <% if Site.first.picture? %>
      <div><%= icon_for(Site.first, { name: Site.first.name, size: 256 }) %></div>
    <% end %>
  <% end %>

  <% if User::can_create? %>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>

  </aside>

  <div class="col-md-8">

    <%= render 'shared/paging_list',
                title: "notes", all_list: @all_notes, page_list: @page_notes,
                command: nil, paging: true %>

  </div>

</div>


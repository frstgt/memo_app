<% provide(:title, @group.name + " Messages") %>

<% pen_name = @group.get_user_member(current_user) %>

<div class="row">

  <aside class="col-md-4">

    <section class="group_info">

      (group_messages)<br>

      <%= render 'groups/info_header_body',
                  group: @group, pen_name: pen_name %>

      <%= icon_for(@group, { name: @group.name, size: 256 }) %>

      <%= render 'groups/info_footer',
                  group: @group, pen_name: pen_name, kind: "messages" %>

    </section>

  </aside>

  <div class="col-md-8">

    <span class="message_form">
      <%= render 'messages/form' %>
    </span>

    <hr>

    <span class="main_header">
      <span class="count">
        messages (<%= @all_messages.count %>)
      </span>
    </span>
    <% if @all_messages.any? %>
      <ol class="note_list">
        <%= render @page_messages %>
      </ol>
      <%= will_paginate @page_messages, renderer: will_pagenate_renderer %>
    <% end %>

  </div>

</div>
<li id="member-<%= member.id %>">

  <% if member.picture? %>
    <%= image_tag member.picture.url, width: 64, height: 64 %>
  <% else %>

  <% end %>

  <span class="header">
    <span class="position">(<%= @group.position(member).downcase %>)</span><br>
    <span class="name"><b><%= link_to member.name, member %></b></span>
  </span>

  <span class="body">
    <span class="description"><%= member.description %></span>
  </span>

  <span class="footer">
    <span class="timestamp text-muted">
      updated <%= time_ago_in_words(member.updated_at) %> ago.
    </span>
    <span class="edit_command">
    </span>
  </span>

</li>

<%= form_for(@group) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :outline %>
    <%= f.text_area :outline, rows: '10', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :picture %>
    <%= image_tag @group.picture.url(:thumb) if @group.picture? %>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </div>

  <div class="form-group">
    <%= f.label :first_master %>
    <%= f.select :pen_name_id,
                 current_user.pen_names.collect { |pen_name| [pen_name.name, pen_name.id] } %>
  </div>

  <div class="form-group">
    <%= f.radio_button :status, Group::ST_OPEN %>
    <%= f.label :open %>
    <%= f.label "(other users can read this group home)" %><br>
    <%= f.radio_button :status, Group::ST_CLOSE %>
    <%= f.label :close %>
    <%= f.label "(other users cannot read this group home)" %>
  </div>

  <div class="form-group">
    <%= f.label :keyword %>
    <%= f.label "(optional)" %><br>
    <%= f.text_field :keyword, type: "text", class: 'form-control' %>
  </div>

  <div class="form-group text-right">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>

<% end %>

<%= render 'static_pages/help_picture_requirements' %>
<%= render 'static_pages/help_group_positions' %>

<script type="text/javascript">
  $('#group_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>